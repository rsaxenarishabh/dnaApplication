<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activities.DNAFacultyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/faculty_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:paddingLeft="10sp"
                            android:paddingTop="15sp"
                            android:src="@drawable/dr1" />

                        <ProgressBar
                            android:visibility="gone"
                            android:id="@+id/imageloader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10sp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/faculty_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="@color/orange"
                            android:text="Dr. Deepu Singh"/>
                        <TextView
                            android:id="@+id/faculty_sub_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="Co-founder CEO, Daily Rounds  DNA"/>

                        <TextView
                            android:id="@+id/faculty_prfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/orange"
                            android:text="MD, Internal Medicine"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:outlineSpotShadowColor="@color/gradStop"
                    android:background="@color/black_titles">

                </View>

                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingTop="15sp"

                    android:paddingLeft="10sp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:backgroundTint="@color/white"
                                            android:foregroundTint="@color/white"
                                            android:src="@drawable/faculty_icon"
                                            />


                    <TextView

                        android:id="@+id/faculty_quotes"
                        android:paddingBottom="15sp"
                        android:paddingTop="15sp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:textSize="16sp"
                        android:textColor="@color/black_titles"
                        android:text="Today is hard,tomorrow is worse, but the day after tomorrow will be Sunshine(Jack Ma)"

                        />

                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>